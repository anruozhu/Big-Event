<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anranruozhu.bigevent.mapper.UserMapper">

    <select id="findByUsername" resultType="com.anranruozhu.bigevent.pojo.User">
        select * from user where username = #{username}
    </select>

    <insert id="add" >
        insert into user(username,password,create_time,update_time)
            values (#{username},#{password},now(),now())
    </insert>

    <update id="update">
        update user set nickname = #{nickname},email = #{email},update_time = now()
            where id = #{id}
    </update>
</mapper>